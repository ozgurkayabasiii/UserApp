<div class="p-4">
  <h2 class="text-2xl font-bold mb-4"><%= album.title %></h2>
  <div class="flex flex-col gap-4">
    <% details.each do |detail| %>
      <div class="flex items-center p-4 border rounded-lg shadow-md">
        <div class="w-1/4">
          <%= image_tag detail.thumbnail_url, alt: detail.title, class: "w-full h-auto rounded-lg" %>
        </div>
        <div class="ml-4 w-3/4">
          <p class="text-gray-700"><strong>Title:</strong> <%= detail.title %></p>
          <p class="text-gray-700"><strong>URL:</strong><%= link_to detail.url, detail.url, target: "_blank",rel: "noopener noreferrer" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
